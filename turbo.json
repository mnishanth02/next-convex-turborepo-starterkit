{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "//#format": {
      "cache": true,
      "inputs": ["**/*.{js,jsx,ts,tsx,json,md,css}"]
    },
    "//#format:check": {
      "cache": true,
      "inputs": ["**/*.{js,jsx,ts,tsx,json,md,css}"]
    },
    "//#check": {
      "cache": true,
      "inputs": ["**/*.{js,jsx,ts,tsx,json}"]
    },
    "//#check:fix": {
      "cache": false
    }
  }
}
