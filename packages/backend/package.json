    "clean": "rm -rf .turbo node_modules"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "typescript": "^5.9.3"
  },
  "exports": {
    "./convex/*": "./convex/*"
  },
  "keywords": [],
  "author": "Nishanth Murugan",
  "license": "MIT",
  "packageManager": "pnpm@10.4.1",
  "dependencies": {
    "convex": "^1.27.4"
  }
