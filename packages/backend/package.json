{
  "name": "@workspace/backend",
  "type": "module",
  "version": "1.0.0",
  "description": "Convex Database and Functions for Next.js app",
  "scripts": {
    "dev": "convex dev",
    "deploy": "convex deploy",
    "predev": "convex dev --until-success --once",
    "typecheck": "tsc --noEmit --project convex/tsconfig.json",
    "lint": "biome lint .",
